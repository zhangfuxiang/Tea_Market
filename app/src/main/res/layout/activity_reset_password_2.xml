<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include
        layout="@layout/app_bar_start_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#999999" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="125px"
        android:layout_marginLeft="43px"
        android:layout_marginRight="43px"
        android:layout_marginTop="45px"
        android:background="@drawable/shape_login"
        android:orientation="horizontal">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:gravity="center">

            <ImageView
                android:layout_width="60px"
                android:layout_height="60px"
                android:src="@mipmap/ic_login_password" />
        </com.zhy.autolayout.AutoLinearLayout>

        <EditText
            android:id="@+id/et_first_input_code"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="61"
            android:background="#00FFFFFF"
            android:gravity="center_vertical"
            android:hint="设置新的登录密码"
            android:includeFontPadding="false"
            android:inputType="textPassword"
            android:maxLines="1"
            android:paddingRight="38px"
            android:textSize="38px" />
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="125px"
        android:layout_marginLeft="43px"
        android:layout_marginRight="43px"
        android:layout_marginTop="45px"
        android:background="@drawable/shape_login"
        android:orientation="horizontal">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:gravity="center">

            <ImageView
                android:layout_width="60px"
                android:layout_height="60px"
                android:src="@mipmap/ic_login_password" />
        </com.zhy.autolayout.AutoLinearLayout>

        <EditText
            android:id="@+id/et_second_input_code"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="61"
            android:background="#00FFFFFF"
            android:gravity="center_vertical"
            android:hint="再次输入新的登录密码"
            android:includeFontPadding="false"
            android:inputType="textPassword"
            android:maxLines="1"
            android:paddingRight="38px"
            android:textSize="38px" />

    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/btn_save_code"
            android:layout_width="match_parent"
            android:layout_height="125px"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="45px"
            android:layout_marginLeft="43px"
            android:layout_marginRight="43px"
            android:background="@drawable/btn_login_selector"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="保存新的密码"
                android:textColor="#FFFFFF"
                android:textSize="38px" />
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoRelativeLayout>

</com.zhy.autolayout.AutoLinearLayout>
