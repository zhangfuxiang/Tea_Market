<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:orientation="vertical"
        android:layout_width="@dimen/px_300"
        android:layout_height="@dimen/px_200">

        <ImageView
            android:id="@+id/time_act_im"
            android:layout_width="@dimen/px_50"
            android:layout_height="@dimen/px_50"
            android:layout_marginLeft="@dimen/px_40"
            android:layout_marginTop="@dimen/px_40"
            android:src="@mipmap/msqg2" />

        <TextView
            android:id="@+id/time_act_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_120"
            android:layout_marginTop="-50px"
            android:text="秒杀抢购"
            android:textColor="@color/txt_color_333"
            android:textSize="@dimen/big_size" />

        <TextView
            android:id="@+id/time_act_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_40"
            android:layout_marginTop="@dimen/px_20"
            android:text="每天限时抢购"
            android:textColor="@color/txt_color_999"
            android:textSize="@dimen/txt_size" />
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>