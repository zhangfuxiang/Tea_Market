<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="125px">

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/btn_close"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="45px"
            android:paddingRight="45px">

            <ImageView
                android:layout_width="45px"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_cancel_dialog" />
        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:paddingLeft="45px"
            android:paddingRight="45px">

            <ImageView
                android:layout_width="65px"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_ok_dialog" />
        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="45px"
        android:layout_marginRight="45px"
        android:background="#dddee3" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.delta.smt.ui.buycar.addNewAddress.WheelView
                android:id="@+id/mWheelViewProvince"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                app:isCyclic="false"
                app:itemNumber="5"
                app:lineColor="#dddee3"
                app:lineHeight="1px"
                app:noEmpty="true"
                app:normalTextColor="#999999"
                app:normalTextSize="40px"
                app:selectedTextColor="#333333"
                app:selectedTextSize="40px" />

            <com.delta.smt.ui.buycar.addNewAddress.WheelView
                android:id="@+id/mWheelViewCity"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                app:isCyclic="false"
                app:itemNumber="5"
                app:lineColor="#dddee3"
                app:lineHeight="1px"
                app:noEmpty="true"
                app:normalTextColor="#999999"
                app:normalTextSize="40px"
                app:selectedTextColor="#333333"
                app:selectedTextSize="40px" />

            <com.delta.smt.ui.buycar.addNewAddress.WheelView
                android:id="@+id/mWheelViewArea"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                app:isCyclic="false"
                app:itemNumber="5"
                app:lineColor="#dddee3"
                app:lineHeight="1px"
                app:noEmpty="true"
                app:normalTextColor="#999999"
                app:normalTextSize="40px"
                app:selectedTextColor="#333333"
                app:selectedTextSize="40px" />
        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoRelativeLayout>


</com.zhy.autolayout.AutoLinearLayout>
