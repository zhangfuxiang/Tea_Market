<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="40px"
    android:background="#FFFFFF">


    <ImageView
        android:src="@drawable/ic_cha_auction_bank"
        android:id="@+id/iv_store_image"
        android:layout_width="197px"
        android:layout_height="197px"
        android:layout_alignTop="@+id/tv_store_name"
        android:layout_marginLeft="20px"
        android:layout_marginBottom="40px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/tv_store_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_marginTop="40px"
        android:layout_toRightOf="@id/iv_store_image"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:maxWidth="693px"
        android:text="老开心茶馆"
        android:textColor="#333333"
        android:textSize="40px" />


    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_store_name"
        android:layout_below="@id/tv_store_name"
        android:layout_marginTop="30px"
        android:includeFontPadding="false"
        android:maxLines="2"
        android:text="地址"
        android:textColor="#999999"
        android:textSize="34px" />

    <ImageView
        android:src="@drawable/ic_cha_more_into"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="20px"
        android:layout_alignTop="@+id/tv_address"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>


<!--    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="45px"
        android:background="#CCCCCC" android:id="@+id/view"/>-->

</com.zhy.autolayout.AutoRelativeLayout>
