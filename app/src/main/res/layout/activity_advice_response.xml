<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/bac"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:weightSum="1">

    <include
        layout="@layout/homepage_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_marginTop="@dimen/px_40"
        android:background="@color/white"
        android:id="@+id/ll_response_type"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_140"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_20"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/px_40"
            android:text="反馈类型"
            android:textColor="#333333"
            android:textSize="@dimen/px_40"/>

        <TextView
            android:id="@+id/tv_response_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_20"
            android:layout_marginRight="@dimen/px_20"
            android:drawablePadding="@dimen/px_20"
            android:drawableRight="@drawable/ic_cha_more_into"
            android:gravity="right|center_vertical"
            android:text="请选择"
            android:textColor="#333333"
            android:textSize="@dimen/px_40"/>
    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/px_40"
        android:text="问题与意见"
        android:padding="@dimen/px_40"
    />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="500px"
        android:id="@+id/et_input_content"
        android:gravity="top"
        android:textSize="@dimen/px_40"
        android:background="@color/white"
        android:padding="@dimen/px_40"
        android:textColor="#333333"
        android:hint="请简单介绍你的问题或意见"
        />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_marginTop="@dimen/px_40"
        android:background="@color/white"
        android:id="@+id/ll_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/px_40"
            android:layout_marginTop="@dimen/px_40"
            android:text="图片（提供问题截图，可选填）"
            android:textColor="#333333"
            android:textSize="@dimen/px_40"/>

        <ImageView
            android:layout_width="@dimen/px_300"
            android:layout_height="@dimen/px_300"
            android:padding="@dimen/px_40"
            android:id="@+id/iv_add_image"
            android:src="@mipmap/iv_add_image"
        />
    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoLinearLayout>

