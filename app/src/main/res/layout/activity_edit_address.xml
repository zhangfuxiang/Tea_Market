<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/bac"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/homepage_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_40"
        android:background="@android:color/white"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_140"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/px_200"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="@dimen/px_40"
                android:text="收件人"
                android:textColor="#333333" android:textSize="@dimen/px_40"/>

            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/px_80"
                android:background="@color/white"
                android:text="王先生"
                android:textColor="#333333"
                android:textSize="@dimen/px_40"/>
        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/px_40"
            android:background="@color/bac"
        />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_140"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/px_200"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="@dimen/px_40"
                android:text="手机号码"
                android:textColor="#333333" android:textSize="@dimen/px_40"/>

            <EditText
                android:id="@+id/et_telephone"
                android:inputType="phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/px_80"
                android:background="@color/white"
                android:text="1385556155"
                android:textColor="#333333"
                android:textSize="@dimen/px_40"/>
        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/px_40"
            android:background="@color/bac"
        />



        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/ll_location"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_140"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/px_200"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="@dimen/px_40"
                android:text="所在地区"
                android:textColor="#333333" android:textSize="@dimen/px_40"/>

            <EditText
                android:id="@+id/et_location"
                android:editable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/px_80"
                android:background="@color/white"
                android:text="图片、数据等"
                android:textColor="#333333"
                android:textSize="@dimen/px_40"/>
        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/px_40"
            android:background="@color/bac"
        />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_240"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/px_200"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="@dimen/px_40"
                android:text="详细地址"
                android:textColor="#333333" android:textSize="@dimen/px_40"/>

            <EditText
                android:id="@+id/et_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/px_80"
                android:background="@color/white"
                android:text="图片、数据等"
                android:textColor="#333333"
                android:textSize="@dimen/px_40"/>
        </com.zhy.autolayout.AutoLinearLayout>


    </com.zhy.autolayout.AutoLinearLayout>



    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/px_40"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/ll_shake"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_140"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/px_20"
                android:text="设为默认地址"
                android:textColor="#333333"
                android:textSize="@dimen/px_40" android:layout_centerVertical="true"
                android:layout_alignParentLeft="true" android:layout_alignParentStart="true"/>

            <Switch
                android:id="@+id/sw_default_address"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/px_40"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true" android:layout_alignParentEnd="true"/>
        </com.zhy.autolayout.AutoRelativeLayout>


        <Button
            android:id="@+id/btn_delete_address"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_140"
            android:text="删除地址"
            android:textColor="@android:color/holo_red_light" android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true" android:layout_alignParentStart="true"/>

    </com.zhy.autolayout.AutoRelativeLayout>

</com.zhy.autolayout.AutoLinearLayout>

