<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tl="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:fitsSystemWindows="true"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include
        layout="@layout/homepage_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_height="1px"
        android:layout_width="match_parent"
        android:background="@color/line"
    />

    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/order_ctl"
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:background="#ffffff"
        tl:tl_indicator_color="@color/base_color"
        tl:tl_indicator_width="250px"
        tl:tl_indicator_height="2px"
        tl:tl_textSelectColor="@color/base_color"
        tl:tl_textUnselectColor="#333333"
        tl:tl_textsize="50px"
        tl:tl_divider_width="1px"
        tl:tl_tab_space_equal="true"
        tl:tl_underline_color="@color/base_color"
        tl:tl_underline_height="0px">

    </com.flyco.tablayout.CommonTabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v4.view.ViewPager>

</com.zhy.autolayout.AutoLinearLayout>