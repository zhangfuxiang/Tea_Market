<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                     android:layout_width="match_parent"
                                     android:layout_height="wrap_content"
                                     android:layout_marginTop="@dimen/px_40"
                                     android:background="#fff"
                                     android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/px_20"
        android:background="@color/line" />
    <!--100-->
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/px_20"
        android:layout_height="100px"
        android:layout_marginLeft="@dimen/px_40"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="王先生"
            android:textSize="@dimen/txt_size" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_telephone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/px_40"
                android:text="138103114"
                android:textSize="@dimen/txt_size">

            </TextView>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/txt_size"
        android:padding="@dimen/px_40"
        android:id="@+id/tv_address"
        android:text="北京市朝阳区望京街道广顺南大街16号嘉美中性写字楼1221号"
    />
    <!--1-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/px_40"
        android:background="@color/line" />
    <!--100-->
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/px_40"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/cb_default_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设为默认地址"
            android:textColor="#333333"
            android:textSize="@dimen/txt_size"/>

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_50"
            android:layout_weight="1"
            android:clickable="true"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_edit"
                android:background="@drawable/btn_auction_selector"
                android:clickable="true"
                android:paddingRight="@dimen/px_40"
                android:paddingTop="@dimen/px_20"
                android:paddingBottom="@dimen/px_20"
                android:paddingLeft="@dimen/px_40"
                android:text="编辑"
                android:textSize="@dimen/txt_size" android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/btn_delete" android:layout_toStartOf="@+id/btn_delete"
                android:layout_marginRight="@dimen/px_40"/>

            <TextView
                android:id="@+id/btn_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@drawable/btn_auction_selector"
                android:paddingRight="@dimen/px_40"
                android:paddingTop="@dimen/px_20"
                android:paddingBottom="@dimen/px_20"
                android:paddingLeft="@dimen/px_40"
                android:text="删除" android:textSize="@dimen/txt_size"
                android:layout_alignParentTop="true" android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>
        </com.zhy.autolayout.AutoRelativeLayout>
    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/px_20"
        android:background="@color/line" />
</com.zhy.autolayout.AutoLinearLayout>