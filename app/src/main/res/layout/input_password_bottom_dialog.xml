<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="125px">

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="125px"
                android:layout_height="match_parent"
                android:padding="40px"
                android:scaleType="fitCenter"
                android:src="@mipmap/start_page_exit" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="输入支付密码"
                android:textColor="#333333"
                android:textSize="40px" />
        </com.zhy.autolayout.AutoRelativeLayout>


    </com.zhy.autolayout.AutoLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="45px"
        android:background="#dddee3" />


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="125px"
        android:layout_marginLeft="125px"
        android:layout_marginRight="125px"
        android:layout_marginTop="125px"
        android:background="@drawable/password_et_border"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_password_1"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:enabled="false"
            android:gravity="center"
            android:inputType="numberPassword"
            android:textColor="#333333"
            android:textSize="60px" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#999999" />

        <TextView
            android:id="@+id/tv_password_2"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:enabled="false"
            android:gravity="center"
            android:inputType="numberPassword"
            android:textColor="#333333"
            android:textSize="60px" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#999999" />

        <TextView
            android:id="@+id/tv_password_3"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:enabled="false"
            android:gravity="center"
            android:inputType="numberPassword"
            android:textColor="#333333"
            android:textSize="60px" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#999999" />

        <TextView
            android:id="@+id/tv_password_4"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:enabled="false"
            android:gravity="center"
            android:inputType="numberPassword"
            android:textColor="#333333"
            android:textSize="60px" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#999999" />

        <TextView
            android:id="@+id/tv_password_5"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:enabled="false"
            android:gravity="center"
            android:inputType="numberPassword"
            android:textColor="#333333"
            android:textSize="60px" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#999999" />

        <TextView
            android:id="@+id/tv_password_6"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:enabled="false"
            android:gravity="center"
            android:inputType="numberPassword"
            android:textColor="#333333"
            android:textSize="60px" />
    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:id="@+id/tv_forget_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="45px"
        android:includeFontPadding="false"
        android:text="忘记支付密码"
        android:textColor="@color/base_color"
        android:textSize="40px" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="183px"
        android:orientation="vertical">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_number_1"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_common_selector"
                android:gravity="center"
                android:text="1"
                android:textColor="#333333"
                android:textSize="60px" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#999999" />

            <TextView
                android:id="@+id/tv_number_2"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_common_selector"
                android:gravity="center"
                android:text="2"
                android:textColor="#333333"
                android:textSize="60px" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#999999" />

            <TextView
                android:id="@+id/tv_number_3"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_common_selector"
                android:gravity="center"
                android:text="3"
                android:textColor="#333333"
                android:textSize="60px" />
        </com.zhy.autolayout.AutoLinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#999999" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_number_4"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_common_selector"
                android:gravity="center"
                android:text="4"
                android:textColor="#333333"
                android:textSize="60px" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#999999" />

            <TextView
                android:id="@+id/tv_number_5"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_common_selector"
                android:gravity="center"
                android:text="5"
                android:textColor="#333333"
                android:textSize="60px" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#999999" />

            <TextView
                android:id="@+id/tv_number_6"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_common_selector"
                android:gravity="center"
                android:text="6"
                android:textColor="#333333"
                android:textSize="60px" />
        </com.zhy.autolayout.AutoLinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#999999" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_number_7"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_common_selector"
                android:gravity="center"
                android:text="7"
                android:textColor="#333333"
                android:textSize="60px" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#999999" />

            <TextView
                android:id="@+id/tv_number_8"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_common_selector"
                android:gravity="center"
                android:text="8"
                android:textColor="#333333"
                android:textSize="60px" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#999999" />

            <TextView
                android:id="@+id/tv_number_9"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_common_selector"
                android:gravity="center"
                android:text="9"
                android:textColor="#333333"
                android:textSize="60px" />
        </com.zhy.autolayout.AutoLinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#999999" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#CCCCCC"
                android:gravity="center"
                android:text=""
                android:textColor="#333333"
                android:textSize="60px" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#999999" />

            <TextView
                android:id="@+id/tv_number_0"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_common_selector"
                android:gravity="center"
                android:text="0"
                android:textColor="#333333"
                android:textSize="60px" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#999999" />

            <com.zhy.autolayout.AutoRelativeLayout
                android:id="@+id/arl_number_backspace"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/number_backspace_selector">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="60px"
                    android:layout_centerInParent="true"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/iv_number_backspace" />
            </com.zhy.autolayout.AutoRelativeLayout>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>

</com.zhy.autolayout.AutoLinearLayout>
