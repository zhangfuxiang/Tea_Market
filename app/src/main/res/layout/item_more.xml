<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <!--200-->
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_240"
            android:layout_marginLeft="@dimen/px_20"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.zhy.autolayout.AutoFrameLayout
                android:layout_width="180px"
                android:layout_height="180px"
                android:layout_marginLeft="@dimen/px_20">

                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/order_iv"
                    android:layout_width="@dimen/px_160"
                    android:layout_height="@dimen/px_160"
                    android:src="@drawable/ic_cha_auction_bank"
                    app:civ_border_color="#00FFFFFF"
                    app:civ_border_width="1px"
                    app:civ_fill_color="#FFFFFF" />

                <TextView
                    android:id="@+id/message_count_tv"
                    android:layout_gravity="right|top"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/white"
                    android:background="@drawable/text_back_circly"
                    android:layout_width="@dimen/px_50"
                    android:layout_height="@dimen/px_50"
                    />
            </com.zhy.autolayout.AutoFrameLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_width="match_parent"
                android:layout_height="180px"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/px_60"
                    android:layout_marginLeft="@dimen/px_10"
                    android:gravity="center"
                    android:text="茶馆老板使用协议"
                    android:textSize="@dimen/big_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/px_60"
                    android:layout_marginLeft="@dimen/px_650"
                    android:layout_marginTop="-60px"
                    android:gravity="center_vertical"
                    android:text="2016-11-30"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/txt_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/px_40"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/px_10"
                    android:layout_marginRight="20px"
                    android:layout_marginTop="@dimen/px_20"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="点击查看完整协议"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/txt_size" />

            </com.zhy.autolayout.AutoLinearLayout>

        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>
    <!--1-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/px_20"
        android:background="@color/line" />

</com.zhy.autolayout.AutoLinearLayout>