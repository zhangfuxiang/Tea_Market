<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/bac"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/homepage_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/px_40"
        android:background="@android:color/white"
        android:layout_height="wrap_content">


        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/ll_head_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_20"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/px_20"
                android:text="头像"
                android:textColor="#333333"
                android:textSize="@dimen/px_40"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_head_image"
                android:src="@mipmap/person"
                android:layout_marginTop="@dimen/px_40"
                android:layout_width="158px"
                android:layout_height="158px"
                android:gravity="right|center_vertical"
                android:textColor="#333333"
                android:textSize="@dimen/px_40" android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/textView11"
                android:layout_toStartOf="@+id/textView11"/>

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/px_20"
                android:drawableRight="@drawable/ic_cha_more_into"
                android:gravity="right|center_vertical"
                android:textColor="#333333"
                android:layout_marginRight="@dimen/px_20"
                android:textSize="@dimen/px_40" android:layout_centerVertical="true"
                android:layout_alignParentRight="true" android:layout_alignParentEnd="true"/>

        </com.zhy.autolayout.AutoRelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/px_20"
            android:layout_marginRight="@dimen/px_20"
            android:background="@color/bac"/>

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/ll_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_140"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_20"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/px_20"
                android:text="姓名"
                android:textColor="#333333"
                android:textSize="@dimen/px_40"/>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_20"
                android:layout_marginRight="@dimen/px_20"
                android:drawablePadding="@dimen/px_20"
                android:drawableRight="@drawable/ic_cha_more_into"
                android:gravity="right|center_vertical"
                android:text="***"
                android:textColor="#333333"
                android:textSize="@dimen/px_40"/>
        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/px_20"
            android:layout_marginRight="@dimen/px_20"
            android:background="@color/bac"
        />

        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/ll_sex"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_140"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_20"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/px_20"
                android:text="性别"
                android:textColor="#333333"
                android:textSize="@dimen/px_40"/>

            <TextView
                android:id="@+id/tv_sex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_20"
                android:layout_marginRight="@dimen/px_20"
                android:drawablePadding="@dimen/px_20"
                android:drawableRight="@drawable/ic_cha_more_into"
                android:gravity="right|center_vertical"
                android:text="*"
                android:textColor="#333333"
                android:textSize="@dimen/px_40"/>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:id="@+id/tv_receiver_address"
        android:background="@color/white"
        android:layout_marginTop="@dimen/px_40"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_140"
        android:drawableRight="@drawable/ic_cha_more_into"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/px_20"
        android:paddingRight="@dimen/px_20"
        android:text="我的收货地址"
        android:textColor="#333333"
        android:textSize="@dimen/px_40"/>

</com.zhy.autolayout.AutoLinearLayout>



