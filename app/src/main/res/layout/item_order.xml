<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/px_50"
    android:background="#fff"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/px_20"
        android:background="@color/line" />
    <!--100-->
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginLeft="@dimen/px_20"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/appointment_order_numb_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:text="订单号0031231239322123"
            android:textSize="@dimen/txt_size" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/order_pay_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_marginRight="20px"
                android:text="买家已付款"
                android:textColor="@color/red"
                android:textSize="@dimen/txt_size">

            </TextView>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>
    <!--1-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/px_20"
        android:background="@color/line" />
    <!--200-->
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:layout_marginLeft="@dimen/px_20"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/order_iv"
            android:layout_width="180px"
            android:layout_height="180px"
            android:layout_marginLeft="@dimen/px_20"
            android:src="@drawable/ic_cha_auction_bank" />

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="180px"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="80px"
                android:layout_marginLeft="@dimen/px_10"
                android:gravity="center"
                android:text="武夷岩茶ZHP0860-125 2016春茶"
                android:textSize="@dimen/txt_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="80px"
                android:layout_marginLeft="@dimen/px_10"
                android:gravity="center"
                android:text="￥ 438.00"
                android:textColor="@color/red"
                android:textSize="@dimen/txt_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="80px"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_marginLeft="@dimen/px_10"
                android:layout_marginRight="20px"
                android:layout_marginTop="-80px"
                android:gravity="center"
                android:text="X 1"
                android:textColor="@color/red"
                android:textSize="@dimen/txt_size" />
        </com.zhy.autolayout.AutoLinearLayout>

    </com.zhy.autolayout.AutoLinearLayout>
    <!--1-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/px_20"
        android:background="@color/line" />
    <!--100-->
    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_marginLeft="@dimen/px_20"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="350px"
                android:layout_height="wrap_content"
                android:text="共1件商品 合计:"
                android:textSize="40px" />

            <TextView
                android:layout_width="300px"
                android:layout_height="wrap_content"
                android:text="￥ 438.00"
                android:textColor="@color/red"
                android:textSize="30px" />

        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_50"
            android:layout_weight="1"
            android:clickable="true"
            android:orientation="horizontal">

            <com.zhy.autolayout.AutoLinearLayout
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="@dimen/px_200"
                    android:layout_height="80px"
                    android:layout_marginLeft="@dimen/px_20"
                    android:background="@drawable/btn_auction_selector"
                    android:clickable="true"
                    android:gravity="center"
                    android:text="请商家发货"
                    android:textSize="@dimen/txt_size" />
            </com.zhy.autolayout.AutoLinearLayout>

            <com.zhy.autolayout.AutoLinearLayout
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:layout_width="@dimen/px_170"
                    android:layout_height="80px"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/px_20"
                    android:background="@drawable/btn_auction_selector"
                    android:gravity="center"
                    android:text="确认发货"
                    android:textColor="@color/greed"
                    android:textSize="@dimen/txt_size" />
            </com.zhy.autolayout.AutoLinearLayout>
        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/px_20"
        android:background="@color/line" />
</com.zhy.autolayout.AutoLinearLayout>