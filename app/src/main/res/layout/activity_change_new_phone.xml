<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                     android:layout_width="match_parent"
                                     android:layout_height="match_parent"
                                     android:background="@color/bac"
                                     android:fitsSystemWindows="true"
                                     android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <include
            layout="@layout/homepage_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="40px"
            android:text="更换手机号,下次登录即可使用新手机号登录"
            android:textSize="30px"/>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_140"

            android:gravity="center_vertical"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_notice_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/px_40"
                android:text="新手机号码"
                android:textColor="#333333"
                android:textSize="@dimen/px_40"/>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/px_40"
                android:layout_marginTop="@dimen/px_20"
                android:drawablePadding="@dimen/px_20"
                android:gravity="right|center_vertical"
                android:text=""
                android:textColor="#333333"
                android:textSize="@dimen/px_40"/>
        </com.zhy.autolayout.AutoLinearLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_40"
            android:background="@android:color/white"
            android:orientation="vertical">


            <com.zhy.autolayout.AutoLinearLayout
                android:id="@+id/ll_change_phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_140"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_clear_cacher"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/px_40"
                    android:text="短信验证码"
                    android:textColor="#333333"
                    android:textSize="@dimen/px_40"/>

                <EditText
                    android:id="@+id/tv_telephone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="@dimen/px_20"
                    android:layout_weight="1"
                    android:background="@null"
                    android:drawablePadding="@dimen/px_20"
                    android:gravity="center_vertical"
                    android:hint="请输入验证码"
                    android:inputType="number"
                    android:textColor="#333333"
                    android:textSize="@dimen/px_40"/>

                <TextView
                    android:id="@+id/btn_get_code"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="19"
                    android:background="#00FFFFFF"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:text="获取验证码"
                    android:textColor="@color/base_color"
                    android:textSize="38px"/>
            </com.zhy.autolayout.AutoLinearLayout>


        </com.zhy.autolayout.AutoLinearLayout>
    </com.zhy.autolayout.AutoLinearLayout>

    <Button
        android:id="@+id/tv_account_bind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30px"
        android:layout_marginTop="@dimen/px_40"
        android:background="@color/c_D7D7D7"
        android:gravity="center"
        android:paddingLeft="@dimen/px_40"
        android:paddingRight="@dimen/px_20"
        android:text="验证并保存"
        android:textColor="@color/white"
        android:textSize="@dimen/px_40"/>
</com.zhy.autolayout.AutoLinearLayout>

