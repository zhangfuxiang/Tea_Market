<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:backgroundTint="@color/white"
            android:gravity="center"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <com.zhy.autolayout.AutoLinearLayout
                android:layout_marginLeft="10px"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.zhy.autolayout.AutoLinearLayout
                    android:visibility="gone"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:id="@+id/toolbar_left_button_arl"
                    android:clickable="true"
                    android:gravity="center"
                    >
                    <ImageView
                        android:visibility="gone"
                        android:layout_height="70px"
                        android:layout_width="60px"
                        android:background="@mipmap/ic_back"
                        />
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/head_search_tv"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/px_50"
                    android:background="@drawable/search_box"
                    android:layout_width="@dimen/px_850"
                    android:layout_height="@dimen/px_70"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:src="@mipmap/search"
                        android:id="@+id/head_search_iv"
                        android:layout_height="40px"
                        android:layout_width="30px"
                        />
                    <TextView
                        android:layout_marginLeft="10px"
                        android:gravity="center_vertical"
                        android:textColor="@color/txt_color_999"
                        android:textSize="@dimen/txt_size"
                        android:text="一级碧螺春春季茶"
                        android:layout_height="match_parent"
                        android:layout_width="wrap_content"
                        />
                </com.zhy.autolayout.AutoLinearLayout>

                <com.zhy.autolayout.AutoLinearLayout
                    android:id="@+id/message"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:layout_width="@dimen/px_180">

                    <ImageView
                        android:layout_marginLeft="@dimen/px_5"
                        android:layout_marginTop="@dimen/px_10"
                        android:src="@mipmap/message"
                        android:layout_height="65px"
                        android:layout_width="60px"/>

                    <TextView
                        android:textSize="@dimen/txt_size"
                        android:text="消息"
                        android:textColor="@color/txt_color_333"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        />
                    </com.zhy.autolayout.AutoLinearLayout>

            </com.zhy.autolayout.AutoLinearLayout>
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

</android.support.design.widget.CoordinatorLayout>
