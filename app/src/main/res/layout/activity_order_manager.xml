<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        layout="@layout/homepage_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_height="1px"
        android:layout_width="match_parent"
        android:background="@color/line"
        />

    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/order_ctl"
        android:layout_width="match_parent"
        android:layout_height="127px"
        android:background="#ffffff"
        tl:tl_indicator_color="@color/base_color"
        tl:tl_indicator_width="250px"
        tl:tl_indicator_height="2px"
        tl:tl_textSelectColor="@color/base_color"
        tl:tl_textUnselectColor="#333333"
        tl:tl_textsize="30px"
        tl:tl_divider_width="1px"
        tl:tl_tab_space_equal="true"
        tl:tl_underline_color="@color/base_color"
        tl:tl_underline_height="0px">

    </com.flyco.tablayout.CommonTabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/ording_manager_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</com.zhy.autolayout.AutoLinearLayout>