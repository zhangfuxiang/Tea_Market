<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="30px"
    android:background="#FFFFFF">

    <View
        android:id="@+id/line_top"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#dddee3" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line_top"
        android:layout_marginLeft="45px"
        android:paddingTop="45px"
        android:text="收货人"
        android:textColor="#333333"
        android:textSize="40px" />

    <TextView
        android:id="@+id/tv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/tv_name"
        android:layout_alignParentRight="true"
        android:layout_marginRight="45px"
        android:text="手机号码"
        android:textColor="#333333"
        android:textSize="40px" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name"
        android:layout_marginLeft="45px"
        android:layout_marginRight="45px"
        android:layout_marginTop="30px"
        android:text="收货地址"
        android:textColor="#333333"
        android:textSize="40px" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/tv_address"
        android:layout_marginLeft="45px"
        android:layout_marginTop="30px"
        android:background="#dddee3" />

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/arl_my_address"
        android:layout_width="match_parent"
        android:layout_height="125px"
        android:layout_below="@id/line">

        <CheckBox
            android:id="@+id/cb_default_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="45px"
            android:includeFontPadding="false"
            android:text="默认地址"
            android:textColor="@color/base_color"
            android:textSize="40px" />

        <TextView
            android:id="@+id/btn_delete"
            android:layout_width="164px"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="20px"
            android:layout_marginRight="45px"
            android:layout_marginTop="20px"
            android:background="@drawable/btn_address_delete_selector"
            android:gravity="center"
            android:text="删除"
            android:textColor="#666666"
            android:textSize="34px" />

        <TextView
            android:id="@+id/btn_edit"
            android:layout_width="164px"
            android:layout_height="match_parent"
            android:layout_marginBottom="20px"
            android:layout_marginRight="30px"
            android:layout_marginTop="20px"
            android:layout_toLeftOf="@id/btn_delete"
            android:background="@drawable/btn_address_edit_selector"
            android:gravity="center"
            android:text="编辑"
            android:textColor="#666666"
            android:textSize="34px" />
    </com.zhy.autolayout.AutoRelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/arl_my_address"
        android:background="#dddee3" />


</com.zhy.autolayout.AutoRelativeLayout>
