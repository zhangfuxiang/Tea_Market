<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bac"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        layout="@layout/homepage_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/px_20"
        android:layout_marginRight="@dimen/px_20"
        android:background="@color/bac"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/px_20"
        android:src="@mipmap/login_page_logo"
    />

    <TextView
        android:id="@+id/tv_score"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_140"
        android:layout_marginTop="@dimen/px_40"
        android:background="@color/white"
        android:drawableRight="@drawable/ic_cha_more_into"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/px_20"
        android:paddingRight="@dimen/px_20"
        android:text="去评分"
        android:textColor="#333333"
        android:textSize="@dimen/px_40"/>


    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_40"
        android:background="@android:color/white"
        android:orientation="vertical">


        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/tv_version"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_140"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_20"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/px_20"
                android:text="版本号"
                android:textColor="#333333"
                android:textSize="@dimen/px_40"/>

            <TextView
                android:id="@+id/tv_version_num"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/px_20"
                android:layout_marginTop="@dimen/px_20"
                android:gravity="right|center_vertical"
                android:text="v1.0.0"
                android:textColor="#333333"
                android:textSize="@dimen/px_40"/>
        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/px_20"
            android:layout_marginRight="@dimen/px_20"
            android:background="@color/bac"/>

        <TextView
            android:id="@+id/tv_user_protocol"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_140"
            android:drawableRight="@drawable/ic_cha_more_into"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/px_20"
            android:paddingRight="@dimen/px_20"
            android:text="用户协议"
            android:textColor="#333333"
            android:textSize="@dimen/px_40"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/px_20"
            android:layout_marginRight="@dimen/px_20"
            android:background="@color/bac"/>
        <TextView
            android:id="@+id/tv_help"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_140"
            android:drawableRight="@drawable/ic_cha_more_into"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/px_20"
            android:paddingRight="@dimen/px_20"
            android:text="使用帮助"
            android:textColor="#333333"
            android:textSize="@dimen/px_40"/>
    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:id="@+id/tv_loaddown"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_140"
        android:layout_marginTop="@dimen/px_40"
        android:background="@color/white"
        android:drawableRight="@drawable/ic_cha_more_into"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/px_20"
        android:paddingRight="@dimen/px_20"
        android:text="扫码下载APP"
        android:textColor="#333333"
        android:textSize="@dimen/px_40"/>

    <com.zhy.autolayout.AutoLinearLayout
        android:id="@+id/tv_telephone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_140"
        android:layout_marginTop="@dimen/px_40"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_clear_cacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_20"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/px_20"
            android:text="茶九九客服电话"
            android:textColor="#333333"
            android:textSize="@dimen/px_40"/>

        <TextView
            android:id="@+id/tv_telephone_num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/px_20"
            android:layout_marginTop="@dimen/px_20"
            android:gravity="right|center_vertical"
            android:text="400-070-0707"
            android:textColor="@color/base_color"
            android:textSize="@dimen/px_40"/>
    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|center_horizontal"
        android:padding="@dimen/px_40"
        android:text="©2017 茶九九 版权所有"
        android:textColor="#333333"
        android:textSize="@dimen/px_40" />

</com.zhy.autolayout.AutoLinearLayout>


